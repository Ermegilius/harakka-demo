# Local Development Environment Variables Template
# Copy this file to .env.local and fill in your actual values

# ========================================
# ENVIRONMENT
# ========================================
NODE_ENV=development

# ========================================
# SUPABASE CONFIGURATION
# ========================================
SUPABASE_URL=YOUR_SUPABASE_URL
SUPABASE_ANON_KEY=YOUR_SUPABASE_ANON_KEY
SUPABASE_SERVICE_ROLE_KEY=YOUR_SUPABASE_SERVICE_ROLE_KEY
SUPABASE_JWT_SECRET=YOUR_SUPABASE_JWT_SECRET
SUPABASE_PROJECT_ID=YOUR_SUPABASE_PROJECT_ID
SUPABASE_DB_PASSWORD=YOUR_SUPABASE_DB_PASSWORD

CRON_SECRET=YOUR_CRON_SECRET
# ========================================
# AUTH PROVIDERS (Google OAuth)
# ========================================
# Set these if you enable Google login in Supabase Auth
SUPABASE_AUTH_EXTERNAL_GOOGLE_ENABLED=true
SUPABASE_AUTH_EXTERNAL_GOOGLE_CLIENT_ID=
SUPABASE_AUTH_EXTERNAL_GOOGLE_SECRET=

# ========================================
# FRONTEND CONFIGURATION (Local Dev)
# ========================================
# For local development, point directly to backend
VITE_API_URL=http://localhost:3000
VITE_SUPABASE_URL=${SUPABASE_URL}
VITE_SUPABASE_ANON_KEY=${SUPABASE_ANON_KEY}

# ========================================
# EMAIL CONFIGURATION (Gmail)
# ========================================
STORAGE_EMAIL=YOUR_GMAIL_EMAIL
STORAGE_EMAIL_PASSWORD=YOUR_GMAIL_APP_PASSWORD


# ========================================
# CORS CONFIGURATION
# ========================================
# Allow local development origins
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5180,http://localhost:5173

# ========================================
# BACKEND CONFIGURATION
# ========================================
# Backend port for local development
PORT=3000

